
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

<div class="title">
<a href="/tasks" width="42""> <img src="http://www.mariowiki.com/images/thumb/1/19/Pokemon_Emblem.png/50px-Pokemon_Emblem.png"> </a>
  <h1>TASK MANAGER</h1>
  <h3>The place to manage your tasks </h3>
  <%= link_to "Create a new Task", "/tasks/new", :class => "btn btn-success" %>
</div>

<div class="container">
  <div class="row">
   <div class="col-sm-4"> </div>
    <div class="col-sm-4 text-center">
      <div class="list">
        <%  @tasks.each do |t| %>

        <div class="task_card">
        <h2><%= t.name %></h2>
          <%= link_to "Show", "/tasks/#{t.id}", :class => "btn btn-success" %>
          <%= link_to "Edit", "/tasks/#{t.id}/edit", :class => "btn btn-primary" %>
          <%= link_to "Delete", "/tasks/#{t.id}", :method => "delete" , :class => "btn btn-danger" %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>


